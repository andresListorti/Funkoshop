<%- include('partials/header') -%> 
    <!-- Inicio Main -->
    <!-- Inicio Section -->
    <section class="hero">
      <article class="hero__content container">
        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubri el proximo Funko Shop de tu coleccion</p>
        <a class="hero__link" href="shop">SHOP</a>
      </article>
    </section>
    <!-- Fin Section -->
    <main class="main-container">
      <% collections.forEach( collection => { %>
      <section class="collection container">
        <article class="collection__content">
          <h3 class="collection__title"><%= collection.licence_name %></h3>
          <p class="collection__text"><%= collection.licence_description %>  </p>
          <a class="collection__link" href="/shop?filter=licence-<%= collection.licence_id %>">VER COLECCIÃ“N</a>
        </article>
        <picture class="collection__cover">
          <img src="/img<%= collection.licence_image %>" alt="Figura coleccionable de <%= collection.licence_name %>" />
        </picture>
      </section>
    </article>
      <% }); %>
      <section class="slider container glide">
        <h2 class="slider__title">Ultimos lanzamientos</h2>
   <%- include('partials/slider') -%> 
    <!-- Fin Main -->
   <%- include('partials/footer') -%> 
    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script src="./js/glide.js"></script>
    <script src="./js/clientCart.js"></script>
    <link rel="stylesheet" href="/css/indexStyle.css">
  </body>
</html>
